{
  "load_direnv": "shell_hook",

  "languages": {
    "Rust": {
      "formatter": "language_server",
      "format_on_save": "on",
    },
  },

  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "features": "all",
        },
        "check": {
          "command": "clippy",
          "extraArgs": ["--", "-D", "warnings"],
        },
        "imports": {
          "granularity": {
            "enforce": true,
            "group": "item",
          },
          "preferNoStd": true,
          "group": {
            "enable": true,
          },
        },
      },
    },
  },

  "file_scan_exclusions": ["**/target/**", "**/node_modules/**"],
}
